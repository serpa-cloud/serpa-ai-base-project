{
  "name": "serpa-ai-base-project",
  "artifactory": "us-docker.pkg.dev/yellowcode-io/serpa-ai",
  "version": "0.1.1",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "login:docker": "gcloud auth configure-docker us-docker.pkg.dev",
    "build:docker": "docker build --platform linux/amd64 -t ${npm_package_artifactory}/${npm_package_name}:${npm_package_version} .",
    "push:docker": "docker push ${npm_package_artifactory}/${npm_package_name}:${npm_package_version}",
    "deploy:docker": "npm run login:docker && npm run build:docker && npm run push:docker"
  },
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "next": "15.1.6"
  },
  "devDependencies": {
    "eslint": "^9",
    "eslint-config-next": "15.1.6",
    "@eslint/eslintrc": "^3"
  }
}
